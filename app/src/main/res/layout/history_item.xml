<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:padding="5dp"
    android:background="@color/primary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image"
        android:scaleType="centerCrop"
        app:sriv_left_bottom_corner_radius="5dp"
        app:sriv_right_top_corner_radius="5dp"
        app:sriv_right_bottom_corner_radius="5dp"
        app:sriv_left_top_corner_radius="5dp"
        android:layout_width="70dp"
        android:layout_height="80dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_title"
            android:textSize="18dp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginEnd="3dp"
                android:id="@+id/text_view_episode"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/text_view_date"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/baseline_date_range_24"
                android:id="@+id/text_view_date"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>